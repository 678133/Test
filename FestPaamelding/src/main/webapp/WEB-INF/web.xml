<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Servlets og URL-mapping -->
    <servlet>
        <servlet-name>PaameldingServlet</servlet-name>
        <jsp-file>/WEB-INF/views/paamelding_med_melding.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>PaameldingServlet</servlet-name>
        <url-pattern>/paamelding</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PaameldtServlet</servlet-name>
        <jsp-file>/WEB-INF/views/paameldt.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>PaameldtServlet</servlet-name>
        <url-pattern>/paameldt</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeltagerlisteServlet</servlet-name>
        <jsp-file>/WEB-INF/views/deltagerliste.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeltagerlisteServlet</servlet-name>
        <url-pattern>/deltagerliste</url-pattern>
    </servlet-mapping>

    <!-- Velkomstside -->
    <welcome-file-list>
        <welcome-file>paamelding_med_melding.jsp</welcome-file>
    </welcome-file-list>

</web-app>
